<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.KadimElifbaTalimlerKarsilama" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ak_vaziyet_cubugu</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <item name="postSplashScreenTheme">@style/Theme.KadimElifbaTalimler</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/ak_vaziyet_cubugu</item>
        <item name="android:navigationBarColor">@color/ak_vaziyet_cubugu</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>